# Shell functions

# cdir - create directory with optional permissions and cd into it
function cdir {
	if [ -z "$1" ]; then
		echo "Usage: cdir <directory> [permissions]" >&2
		return 1
	fi
	mkdir -p "$1" || return 1
	[ -n "$2" ] && chmod "$2" "$1"
	cd "$1"
}

function jc {
	# JSON colorizer/prettifier - uses jq if available, falls back to cat
	if command -v jq &>/dev/null; then
		jq . 2>/dev/null || cat
	else
		cat
	fi
}
