# Sourced by ~/.dotfiles/zshrc

# Add claudescripts to PATH
export PATH="$HOME/.claudescripts:$PATH"

# Short aliases for claudescripts
alias cpush="$HOME/.claudescripts/push"
alias cgh="$HOME/.claudescripts/ghcli"
alias csup="$HOME/.claudescripts/support"
alias cask="$HOME/.claudescripts/askclaude"

# Edit claudescripts and bash_aliases
alias ecc="nvim $HOME/.dotfiles/claudescripts $HOME/.dotfiles/bash_aliases"
